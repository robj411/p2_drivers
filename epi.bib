@article{Keogh-Brown2024,
  title = {Estimating the Health and Macroeconomic Burdens of Tuberculosis in {{India}}, 2021--2040: {{A}} Fully Integrated Modelling Study},
  shorttitle = {Estimating the Health and Macroeconomic Burdens of Tuberculosis in {{India}}, 2021--2040},
  author = {{Keogh-Brown}, Marcus R. and Sumner, Tom and Sweeney, Sedona and Vassall, Anna and Jensen, Henning Tarp},
