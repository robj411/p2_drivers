@article{Silal2023,
  title = {The {{National COVID-19 Epi Model}} ({{NCEM}}): {{Estimating}} Cases, Admissions and Deaths for the First Wave of {{COVID-19}} in {{South Africa}}},
  shorttitle = {The {{National COVID-19 Epi Model}} ({{NCEM}})},
  author = {Silal, Sheetal Prakash and Pulliam, Juliet R. C. and {Meyer-Rath}, Gesine and Jamieson, Lise and Nichols, Brooke E. and Norman, Jared and Hounsell, Rachel and Mayet, Saadiyah and Kagoro, Frank and Moultrie, Harry},
  editor = {Massinga Loembe, Marguerite},
