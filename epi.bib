@article{Ragonnet2025,
  title = {Estimating the Impact of School Closures on the {{COVID-19}} Dynamics in 74 Countries: {{A}} Modelling Analysis},
  shorttitle = {Estimating the Impact of School Closures on the {{COVID-19}} Dynamics in 74 Countries},
  author = {Ragonnet, Romain and Hughes, Angus E. and Shipman, David S. and Meehan, Michael T. and Henderson, Alec S. and Briffoteaux, Guillaume and Melab, Nouredine and Tuyttens, Daniel and McBryde, Emma S. and Trauer, James M.},
  editor = {MacPherson, Peter},
  year = {2025},
  month = jan,
  journal = {PLOS Medicine},
