@article{Yeung2023,
  title = {Estimating the Delivery Costs of {{COVID-19}} Vaccination Using the {{COVID-19 Vaccine Introduction}} and Deployment {{Costing}} ({{CVIC}}) Tool: The {{Lao People}}'s {{Democratic Republic}} Experience},
  shorttitle = {Estimating the Delivery Costs of {{COVID-19}} Vaccination Using the {{COVID-19 Vaccine Introduction}} and Deployment {{Costing}} ({{CVIC}}) Tool},
  author = {Yeung, Karene Hoi Ting and Kim, Eunkyoung and Yap, Wei Aun and Pathammavong, Chansay and Franzel, Lauren and Park, Yu Lee and Cowley, Peter and Griffiths, Ulla Kou and Hutubessy, Raymond Christiaan W.},
  year = {2023},
