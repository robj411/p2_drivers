@article{Pilkington2022,
  title = {Global {{COVID-19 Vaccine Inequity}}: {{Failures}} in the {{First Year}} of {{Distribution}} and {{Potential Solutions}} for the {{Future}}},
  shorttitle = {Global {{COVID-19 Vaccine Inequity}}},
  author = {Pilkington, Victoria and Keestra, Sarai Mirjam and Hill, Andrew},
  year = {2022},
  month = mar,
  journal = {Frontiers in Public Health},
